<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <include layout="@layout/layout_piano_options" />


        <com.noatnoat.pianoapp.ui.views.CustomSeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/scrollbgm"
            android:elevation="16dp"
            android:max="100"
            android:progress="0"
            android:thumb="@drawable/seekbar_thumb" />

        <include
            layout="@layout/layout_piano_keyboard_mini1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.noatnoat.pianoapp.ui.views.CustomSeekBar
            android:id="@+id/seekBar2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:max="100"
            android:layout_margin="8dp"
            android:progress="0"
            android:elevation="16dp"
            android:background="@drawable/scrollbgm"
            android:thumb="@drawable/seekbar_thumb"
            />

        <include
            layout="@layout/layout_piano_keyboard_mini2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>