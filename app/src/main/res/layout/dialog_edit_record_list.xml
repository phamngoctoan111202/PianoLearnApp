<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="450dp"
    android:layout_height="wrap_content"
    android:padding="34dp"
    android:background="@color/dialog_background">

    <TextView
        android:id="@+id/title_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="Change the record name"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/subtitle_record"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/bgr_corner"
        android:elevation="8dp"
        android:fontFamily="@font/nunito_regular"
        android:hint="Enter your name here"
        android:inputType="text"
        android:maxLines="1"
        android:padding="12dp"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/button_save"
        app:layout_constraintStart_toStartOf="@+id/button_close"
        app:layout_constraintTop_toBottomOf="@id/title_record" />



    <Button
        android:id="@+id/button_close"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background_corner"
        android:backgroundTint="@color/mbridge_cpb_grey"
        android:fontFamily="@font/nunito_bold"
        android:text="Close"
        android:textColor="@color/text_color"
        android:textSize="18dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle_record"/>

    <Button
        android:id="@+id/button_save"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background_corner"
        android:fontFamily="@font/nunito_bold"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle_record"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
