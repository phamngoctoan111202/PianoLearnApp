<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="14dp"
    android:background="@drawable/gradient_background_square">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:background="@drawable/bgr_corner"
        android:src="@drawable/ic_back"
        android:elevation="18dp"
        android:scaleType="center"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"/>

    <RelativeLayout
        android:id="@+id/record_btn"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:background="@drawable/round_button2"
        app:layout_constraintStart_toEndOf="@id/back_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="8dp"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/img_record"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_record_play"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/txt_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:layout_toRightOf="@id/img_record"
            android:layout_centerVertical="true"
            android:text="REC"
            android:textColor="@color/text_color"
            android:layout_marginStart="8dp"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/two_peoples_btn"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:background="@drawable/round_button"
        android:elevation="8dp"
        android:padding="10dp"
        android:scaleType="center"
        android:src="@drawable/ic_2players"
        app:layout_constraintStart_toEndOf="@id/record_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:id="@+id/two_keyboard_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_2keys"
        android:elevation="8dp"
        android:scaleType="center"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/two_peoples_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:id="@+id/import_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_import"
        android:elevation="8dp"
        android:scaleType="center"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/two_keyboard_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/song_list"
        android:layout_width="150dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/round_button2"
        android:drawableTint="@color/song_list_color"
        android:elevation="8dp"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:textColor="@color/song_list_color"
        app:drawableRightCompat="@drawable/ic_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/import_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437" />

    <ImageButton
        android:id="@+id/play_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_play"
        android:elevation="8dp"
        android:scaleType="center"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/song_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:id="@+id/style_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/round_button"
        android:elevation="8dp"
        android:padding="10dp"
        android:src="@drawable/ic_style"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/play_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:id="@+id/hide_note_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_show_note"
        android:elevation="8dp"
        android:scaleType="center"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/style_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/step_piano_btn"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:drawableStart="@drawable/ic_hand_point_up"
        android:drawablePadding="10dp"
        android:elevation="8dp"
        android:background="@drawable/bgr_step_btn"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/hide_note_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        android:text="Step"
        android:paddingHorizontal="8dp"
        android:textSize="16sp"
        android:textColor="@color/text_color"/>

    <ImageButton
        android:id="@+id/options_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bgr_corner"
        android:src="@drawable/ic_options"
        android:elevation="8dp"
        android:scaleType="center"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@id/step_piano_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
