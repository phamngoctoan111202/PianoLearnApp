<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
            <size android:width="78dp" />
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <selector >
            <item android:drawable="@drawable/img_white_up" android:state_pressed="false" />
            <item android:drawable="@drawable/img_white_down" android:state_pressed="true"/>
        </selector>
    </item>
</layer-list>